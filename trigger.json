{
  "name": "twitter-listner",
  "type": "flogo:trigger",
  "ref": "github.com/DipeshTest/mytrigger",
  "version": "0.0.1",
  "title": "Twitter Stream Listner",
  "author": "AllStars",
  "description": "Simple Twitter Stream Listner",
  "settings":[
    {
      "name": "apiKey",
      "type": "string"
    },
    {
      "name": "apiSecret",
      "type": "string"
    },
    {
      "name": "consumerKey",
      "type": "string"
    },
    {
      "name": "consumerSecret",
      "type": "string"
    }

  ],
  "output": [
    {
      "name": "tweetId",
      "type": "string"
    },
    {
      "name": "screenName",
      "type": "string"
